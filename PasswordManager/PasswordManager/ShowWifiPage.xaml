<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ShowWifiPage">
    <ContentPage.Content>

        <StackLayout Margin="20,20,0,0" Spacing="10">
            <StackLayout Orientation="Horizontal">
                    <Image Source="wifi_icon.xml"/>
                    <Label x:Name="login" FontSize="Medium" TextColor="Black" />
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Image Source="key_icon.xml"/>
                    <Label x:Name="password" FontSize="Medium" TextColor="Black" Text="{Binding}"/>
                </StackLayout>


            <StackLayout Orientation="Horizontal">
                <Label x:Name="url" FontSize="Medium" TextColor="Black" />
                </StackLayout>
            </StackLayout>
       
    </ContentPage.Content>
</ContentPage>